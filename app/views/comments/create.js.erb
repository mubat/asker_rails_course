let comments_container = $("#<%= comment.commentable_type.underscore %>-<%= comment.commentable_id %> .comments-container");

comments_container.find('.answer-errors').html('<%= render 'shared/errors', resource: comment %>');

<% if comment.persisted? %>
comments_container.find('.comments-list').append("<%= j render comment %>");
comments_container.find('[name="comment[body]"]').val('');
<% end %>
